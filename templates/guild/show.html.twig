{% extends 'base.html.twig' %}

{% block title %}{{guild.name}}!{% endblock %}

{% block body %}
  <h1><small>[{{guild.tag}}]</small> {{guild.name}}</h1>

  <h2>Logs</h2>

  {% if logs %}
    <ul>
      {% for log in logs %}
        {% if log.getData().type != 'motd' %}
          <li>{% include 'guild/_log.html.twig' with {'log': log} %}</li>
        {% endif %}
      {% endfor %}
    </ul>
  {% else %}
    <p>No logs.</p>
  {% endif %}


  <h2>Members</h2>

  {% if members %}
    <table cellpadding="5" cellspacing="0" border="1" bordercolor="#ddd">
      <thead>
        <tr>
          <th>User</th>
          <th>Rank</th>
          <th>Joined</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members.members %}
        <tr>
          <td>{{member.name}}</td>
          <td>{{member.rank}}</td>
          <td>{{member.joined|date('d/m/Y')}}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No members.</p>
  {% endif %}

{% endblock %}
